<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/left_drawer_background_color"
    android:fitsSystemWindows="true"
    android:padding="0dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="start"
                  android:orientation="vertical"
                  android:fitsSystemWindows="true"
        >

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/left_drawer_background_color"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/nurse_icon"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/nurse_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/left_drawer_background_color"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Michael Smith"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:fontFamily="sans-serif-thin"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="0dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/menu_profile_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_activehighlight"
                android:alpha="0"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:src="@drawable/messages_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Messages"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-thin"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feeds"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feeds_activehighlight"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_activehighlight"
                android:alpha="256"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feed_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Feed"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patients"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_activehighlight"
                android:alpha="0"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:src="@drawable/patients" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Patients"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-thin"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nurses_on_duty"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_activehighlight"
                android:alpha="0"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:src="@drawable/nursesonduty_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Nurses on Duty"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-thin"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="60dp"
                android:src="@drawable/status_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Status: Available"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:fontFamily="sans-serif-thin"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/left_drawer_background_color"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="60dp"
                android:src="@drawable/settings_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Settings"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:fontFamily="sans-serif-thin"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/left_drawer_background_color"
>

        <TextView
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00A9Accenture 2016. Demo purpose only."
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_alignParentStart="false"/>
    </RelativeLayout>
</RelativeLayout>
